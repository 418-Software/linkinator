{
  "manifest_version": 3,
  "name": "Linkinator",
  "version": "0.1.0",
  "description": "Easily build your UTM links.",
  "author": "Mike Healey",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Linkinator",
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage", "tabs"]
}
